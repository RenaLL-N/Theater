@model Theater.TheaterPerformances

@{
    ViewData["Title"] = "Adding ThPr";
}

<h4>Додати виставу</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPerformance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ThId" class="control-label"></label>
                <select asp-for="ThId" class="form-control" asp-items="ViewBag.ThId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PrId" class="control-label"></label>
                <select asp-for="PrId" class="form-control" asp-items="ViewBag.PrId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
                <a asp-action="Performance" asp-route-id="@ViewBag.Back" class="btn btn btn-info">Повернутись до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
