@model Theater.TheaterPerformances

@{
    ViewData["Title"] = "Remove";
}

<h1>Видалити</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Th.ThName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pr.PrName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Info)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>
    </dl>

    <form asp-action="RemovePerformance">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Performance" asp-route-id="@ViewBag.Back" class=" btn btn-info">Повернутись до списку</a>
    </form>
</div>