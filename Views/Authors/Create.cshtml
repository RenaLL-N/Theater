@model Theater.Authors

@{
    ViewData["Title"] = "Create";
}

<h1>Додати автора</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuName" class="control-label"></label>
                <input asp-for="AuName" class="form-control" />
                <span asp-validation-for="AuName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuDateb" class="control-label"></label>
                <input asp-for="AuDateb" class="form-control" />
                <span asp-validation-for="AuDateb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuDated" class="control-label"></label>
                <input asp-for="AuDated" class="form-control" />
                <span asp-validation-for="AuDated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuCt" class="control-label"></label>
                <select asp-for="AuCt" class ="form-control" asp-items="ViewBag.AuCt"></select>
            </div>
            <div class="form-group">
                <label asp-for="AuInfo" class="control-label"></label>
                <input asp-for="AuInfo" class="form-control" />
                <span asp-validation-for="AuInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-info">Повернутись до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
