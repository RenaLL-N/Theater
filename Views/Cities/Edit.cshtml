@model Theater.Cities

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінити інформацію про місто</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CtId" />
            <div class="form-group">
                <label asp-for="CtName" class="control-label"></label>
                <input asp-for="CtName" class="form-control" />
                <span asp-validation-for="CtName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoId" class="control-label"></label>
                <select asp-for="CoId" class="form-control" asp-items="ViewBag.CoId"></select>
                <span asp-validation-for="CoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-info">Повернутись до списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
