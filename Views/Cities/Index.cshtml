@model IEnumerable<Theater.Cities>

@{
    ViewData["Title"] = "Index";
}

<h1>Список міст</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-success">Додати місто</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CtName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Co)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CtName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Co.CoName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CtId"class="btn btn-warning">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.CtId" class="btn btn-info">Додатково</a> |
                <a asp-action="Delete" asp-route-id="@item.CtId" class="btn btn-danger">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
